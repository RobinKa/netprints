<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetPrintsEditor"
        xmlns:cmds="clr-namespace:NetPrintsEditor.Commands"
        xmlns:Controls="clr-namespace:NetPrintsEditor.Controls" x:Class="NetPrintsEditor.ClassEditorWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Background="#FF404040" x:Name="classWindow">
    <Window.CommandBindings>
        <CommandBinding Command="cmds:NetPrintsCommands.AddMethod" CanExecute="CommandAddMethod_CanExecute" Executed="CommandAddMethod_Executed" />
        <CommandBinding Command="cmds:NetPrintsCommands.RemoveMethod" CanExecute="CommandRemoveMethod_CanExecute" Executed="CommandRemoveMethod_Executed" />
        <CommandBinding Command="cmds:NetPrintsCommands.AddAttribute" CanExecute="CommandAddAttribute_CanExecute" Executed="CommandAddAttribute_Execute"/>
        <CommandBinding Command="cmds:NetPrintsCommands.RemoveAttribute" CanExecute="CommandRemoveAttribute_CanExecute" Executed="CommandRemoveAttribute_Execute" />
        <CommandBinding Command="cmds:NetPrintsCommands.SetNodePosition" CanExecute="CommandSetNodePosition_CanExecute" Executed="CommandSetNodePosition_Execute" />
        <CommandBinding Command="cmds:NetPrintsCommands.ConnectPins" CanExecute="CommandConnectPins_CanExecute" Executed="CommandConnectPins_Execute" />

        <CommandBinding Command="ApplicationCommands.Undo" Executed="CommandUndo_Executed" />
        <CommandBinding Command="ApplicationCommands.Redo" Executed="CommandBinding_Executed" />
    </Window.CommandBindings>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="#FFEEEEEE" />
            <Setter Property="BorderBrush" Value="#FF444444"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF333333" />
            <Setter Property="Foreground" Value="#FFEEEEEE" />
            <Setter Property="BorderBrush" Value="#FF444444"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FF404040" />
            <Setter Property="BorderBrush" Value="#FF444444"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFEEEEEE" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFEEEEEE" />
        </Style>

        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="#FF444444" />
        </Style>

        <ControlTemplate x:Key="SelectedTemplate" TargetType="ListViewItem">
            <Border MouseMove="OnVariableListMouseMove" CornerRadius="3" BorderThickness="1" BorderBrush="#FF3A3A3A" Background="#FF555555" Margin="1">
                <TextBlock Foreground="#FFEEEEEE" Text="{Binding Name}" Margin="3" VerticalAlignment="Center" FontSize="14" />
            </Border>
        </ControlTemplate>

        <Style TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border MouseMove="OnVariableListMouseMove" CornerRadius="3" BorderThickness="1" BorderBrush="#FF444444" Background="#FF333333" Margin="1" >
                            <TextBlock Foreground="#FFEEEEEE" Text="{Binding Name}" Margin="3" VerticalAlignment="Center" FontSize="14" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="true" />
                        <Condition Property="Selector.IsSelectionActive" Value="true" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Template" Value="{StaticResource SelectedTemplate}" />
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <ListView x:Name="methodList" ItemsSource="{Binding ElementName=classWindow, Path=Class.Methods}" MouseDoubleClick="OnMethodListDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Name}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Grid.Row="1" Content="Create Method" FontFamily="Lucida Sans Unicode" Click="AddMethodButton_Click" FontSize="16" FontWeight="Bold" />
            </Grid>

            <GridSplitter Grid.Row="1" Height="5" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" />
            
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <ListView x:Name="attributeList" ItemsSource="{Binding ElementName=classWindow, Path=Class.Attributes}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Grid.Row="1" Content="Create Attribute" FontFamily="Lucida Sans Unicode" Click="AddAttributeButton_Click" FontSize="16" FontWeight="Bold" />
            </Grid>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

        <Controls:MethodEditorControl x:Name="methodEditor" Grid.Column="2"/>

        <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
